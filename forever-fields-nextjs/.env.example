# Forever Fields Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DEMO MODE
# =============================================================================
# Set to "true" to run the app without external services
# All features will use mock data and demo users
NEXT_PUBLIC_DEMO_MODE=true

# =============================================================================
# APPLICATION
# =============================================================================
# Your app's public URL (used for OAuth callbacks, og images, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: External API URL (if using separate backend)
NEXT_PUBLIC_API_URL=http://localhost:3001
API_URL=http://localhost:3001

# Optional: WebSocket server URL
NEXT_PUBLIC_SOCKET_URL=

# =============================================================================
# DATABASE (Required for production)
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=

# =============================================================================
# SUPABASE (Required for authentication)
# =============================================================================
# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=

# Supabase anon/public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase service role key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# AI SERVICES (Optional - demo mode works without these)
# =============================================================================
# Anthropic API key for Claude AI features
# Used for: obituary writing, memory assistant, legacy companion, photo analysis
ANTHROPIC_API_KEY=

# Replicate API token for ML models
# Used for: photo restoration, colorization, animation
REPLICATE_API_TOKEN=

# =============================================================================
# PAYMENTS (Optional - demo mode works without these)
# =============================================================================
# Stripe secret key
STRIPE_SECRET_KEY=

# Stripe public/publishable key
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=

# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=

# Stripe price IDs for subscription tiers
STRIPE_PRICE_REMEMBER=
STRIPE_PRICE_HERITAGE=
STRIPE_PRICE_LEGACY=
STRIPE_PRICE_PERPETUAL=

# =============================================================================
# BLOCKCHAIN STORAGE (Optional - demo mode uses in-memory storage)
# =============================================================================
# Arweave wallet key (JSON Web Key format)
ARWEAVE_WALLET_KEY=

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================
# FamilySearch API credentials
FAMILYSEARCH_CLIENT_ID=
FAMILYSEARCH_REDIRECT_URI=

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Node environment (development, production, test)
NODE_ENV=development
